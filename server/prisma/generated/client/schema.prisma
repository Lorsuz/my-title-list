datasource db {
  // provider = "sqlite"
  // url      = "file:../database/database.sqlite"
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
  output   = "./generated/client"
}

model User {
  id    Int     @id @default(autoincrement())
	name  String
  email String  @unique
  password  String
}

